  "governance_rules": [
    {
      "rule_id": "R1",
      "name": "Budget Approval Rule",
      "type": "financial",
      "description": "Decisions with cost > $100k require CFO approval",
      "condition": {
        "field": "cost",
        "operator": ">",
        "value": 100000
      },
      "consequence": {
        "action": "require_approval",
        "approver_role": "CFO",
        "approver_id": "bob_002",
        "severity": "high"
      },
      "active": true,
      "relationships": {
        "enforces_goal": "G3",
        "protects_kpi": "K5"
      }
    },
    {
      "rule_id": "R2",
      "name": "Privacy Compliance Rule",
      "type": "compliance",
      "description": "Decisions affecting EU users or PII require CTO review",
      "condition": {
        "operator": "OR",
        "conditions": [
          {
            "field": "target_market",
            "operator": "contains",
            "value": "EU"
          },
          {
            "field": "uses_pii",
            "operator": "==",
            "value": true
          }
        ]
      },
      "consequence": {
        "action": "require_review",
        "approver_role": "CTO",
        "approver_id": "charlie_003",
        "severity": "critical"
      },
      "active": true,
      "relationships": {
        "enforces_goal": "G2",
        "protects_kpi": "K4",
        "compliance_framework": "GDPR"
      }
    },
    {
      "rule_id": "R3",
      "name": "Deployment Conflict Rule",
      "type": "operational",
      "description": "Launch dates cannot overlap with scheduled maintenance windows",
      "condition": {
        "field": "launch_date",
        "operator": "overlaps_with",
        "value": "maintenance_window"
      },
      "consequence": {
        "action": "flag_critical",
        "severity": "critical",
        "message": "Deployment conflicts with maintenance window - high risk of service disruption"
      },
      "active": true,
      "relationships": {
        "enforces_goal": "G2",
        "protects_kpi": "K4"
      },
      "metadata": {
        "maintenance_windows": [
          {
            "start": "2025-03-15T02:00:00Z",
            "end": "2025-03-15T06:00:00Z",
            "type": "database_migration"
          },
          {
            "start": "2025-06-01T00:00:00Z",
            "end": "2025-06-01T04:00:00Z",
            "type": "security_patching"
          }
        ]
      }
    },
    {
      "rule_id": "R4",
      "name": "Strategic Alignment Rule",
      "type": "strategic",
      "description": "Major initiatives must align with at least one strategic goal",
      "condition": {
        "field": "cost",
        "operator": ">",
        "value": 50000
      },
      "consequence": {
        "action": "require_goal_mapping",
        "severity": "medium",
        "message": "Decision must map to at least one strategic goal (G1, G2, or G3)"
      },
      "active": true,
      "relationships": {
        "enforces": "strategic_alignment"
      }
    },
    {
      "rule_id": "R5",
      "name": "Multi-Approval Rule",
      "type": "financial",
      "description": "Decisions > $500k require both CFO and CEO approval",
      "condition": {
        "field": "cost",
        "operator": ">",
        "value": 500000
      },
      "consequence": {
        "action": "require_approval",
        "approver_roles": ["CFO", "CEO"],
        "approver_ids": ["bob_002", "alice_001"],
        "severity": "critical",
        "requires_sequential": true
      },
      "active": true,
      "relationships": {
        "enforces_goal": "G3",
        "escalation_chain": ["bob_002", "alice_001"]
      }
    }
  ],

