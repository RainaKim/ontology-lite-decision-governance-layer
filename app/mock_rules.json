{
  "governance_rules": [
    {
      "rule_id": "R001",
      "name": "High Risk Escalation",
      "description": "Decisions with risk_score >= 7.0 require C-level and board approval",
      "conditions": {
        "risk_score": {
          "operator": ">=",
          "value": 7.0
        }
      },
      "approval_chain": [
        {
          "level": "department_head",
          "role": "Department Head",
          "required": true,
          "rationale": "Initial departmental review"
        },
        {
          "level": "vp",
          "role": "VP of Operations",
          "required": true,
          "rationale": "Executive risk assessment"
        },
        {
          "level": "c_level",
          "role": "Chief Risk Officer",
          "required": true,
          "rationale": "High-risk decision oversight"
        },
        {
          "level": "board",
          "role": "Board Risk Committee",
          "required": true,
          "rationale": "Board approval for high-risk decisions"
        }
      ],
      "priority": 1
    },
    {
      "rule_id": "R002",
      "name": "Critical Strategic Impact",
      "description": "Decisions with critical strategic impact require full C-suite approval",
      "conditions": {
        "strategic_impact": {
          "operator": "==",
          "value": "critical"
        }
      },
      "approval_chain": [
        {
          "level": "vp",
          "role": "VP of Strategy",
          "required": true,
          "rationale": "Strategic alignment verification"
        },
        {
          "level": "c_level",
          "role": "Chief Strategy Officer",
          "required": true,
          "rationale": "Strategic impact assessment"
        },
        {
          "level": "c_level",
          "role": "CEO",
          "required": true,
          "rationale": "Executive approval for critical decisions"
        },
        {
          "level": "board",
          "role": "Board of Directors",
          "required": false,
          "rationale": "Optional board notification for awareness"
        }
      ],
      "priority": 1
    },
    {
      "rule_id": "R003",
      "name": "Medium Risk Standard Flow",
      "description": "Decisions with 4.0 <= risk_score < 7.0 require VP approval",
      "conditions": {
        "risk_score": {
          "operator": ">=",
          "value": 4.0,
          "and": {
            "risk_score": {
              "operator": "<",
              "value": 7.0
            }
          }
        }
      },
      "approval_chain": [
        {
          "level": "team_lead",
          "role": "Team Lead",
          "required": true,
          "rationale": "Team-level review"
        },
        {
          "level": "department_head",
          "role": "Department Head",
          "required": true,
          "rationale": "Departmental approval"
        },
        {
          "level": "vp",
          "role": "VP of Department",
          "required": true,
          "rationale": "Executive approval for medium-risk decisions"
        }
      ],
      "priority": 2
    },
    {
      "rule_id": "R004",
      "name": "Low Risk Fast Track",
      "description": "Decisions with risk_score < 4.0 and low/medium strategic impact use simplified approval",
      "conditions": {
        "risk_score": {
          "operator": "<",
          "value": 4.0
        },
        "strategic_impact": {
          "operator": "in",
          "value": ["low", "medium"]
        }
      },
      "approval_chain": [
        {
          "level": "team_lead",
          "role": "Team Lead",
          "required": true,
          "rationale": "Team approval sufficient for low-risk decisions"
        },
        {
          "level": "department_head",
          "role": "Department Head",
          "required": false,
          "rationale": "Optional notification to department head"
        }
      ],
      "priority": 3
    },
    {
      "rule_id": "R005",
      "name": "Cross-Functional High Impact",
      "description": "High strategic impact decisions require cross-functional approval regardless of risk",
      "conditions": {
        "strategic_impact": {
          "operator": "==",
          "value": "high"
        }
      },
      "approval_chain": [
        {
          "level": "department_head",
          "role": "Primary Department Head",
          "required": true,
          "rationale": "Owning department approval"
        },
        {
          "level": "department_head",
          "role": "Affected Department Head(s)",
          "required": true,
          "rationale": "Cross-functional impact review"
        },
        {
          "level": "vp",
          "role": "VP of Operations",
          "required": true,
          "rationale": "Cross-functional coordination approval"
        },
        {
          "level": "c_level",
          "role": "Relevant C-Level Executive",
          "required": true,
          "rationale": "Executive alignment on high-impact decisions"
        }
      ],
      "priority": 2
    },
    {
      "rule_id": "R006",
      "name": "Financial Threshold - Major Investment",
      "description": "Decisions implying budget > $1M or containing 'acquisition', 'investment', 'capital' require CFO approval",
      "conditions": {
        "decision_statement_keywords": {
          "operator": "contains_any",
          "value": ["acquisition", "investment", "capital", "budget", "$1M", "million"]
        }
      },
      "approval_chain": [
        {
          "level": "department_head",
          "role": "Budget Owner",
          "required": true,
          "rationale": "Budget accountability"
        },
        {
          "level": "vp",
          "role": "VP of Finance",
          "required": true,
          "rationale": "Financial review and approval"
        },
        {
          "level": "c_level",
          "role": "CFO",
          "required": true,
          "rationale": "Major financial decision approval"
        },
        {
          "level": "c_level",
          "role": "CEO",
          "required": true,
          "rationale": "Executive approval for major investments"
        }
      ],
      "priority": 1
    },
    {
      "rule_id": "R007",
      "name": "Default Approval Chain",
      "description": "Fallback approval chain when no specific rules match",
      "conditions": {
        "default": true
      },
      "approval_chain": [
        {
          "level": "team_lead",
          "role": "Team Lead",
          "required": true,
          "rationale": "Standard team approval"
        },
        {
          "level": "department_head",
          "role": "Department Head",
          "required": true,
          "rationale": "Standard departmental approval"
        }
      ],
      "priority": 999
    }
  ],
  "rule_evaluation_notes": {
    "priority_system": "Lower priority number = higher precedence. Rules are evaluated in priority order.",
    "condition_operators": [
      "== (equals)",
      ">= (greater than or equal)",
      "< (less than)",
      "in (value in list)",
      "contains_any (text contains any keyword)"
    ],
    "approval_chain_computation": "The first matching rule (by priority) determines the approval_chain. Multiple rules can match, but highest priority wins.",
    "required_field": "If 'required: true', approval is mandatory. If 'required: false', approval is optional (notification only).",
    "day3_implementation": "Rule engine will evaluate conditions against Decision object fields and populate approval_chain field."
  }
}
