  "strategic_goals": [
    {
      "goal_id": "G1",
      "name": "글로벌 매출 확대",
      "description": "2025년 신규 시장 진출 및 M&A 활동을 통해 연결 매출 25% 성장 달성",
      "owner_id": "ceo_001",
      "kpis": [
        { "kpi_id": "K1", "name": "매출 성장률", "target": "전년 대비 25% 증가" },
        { "kpi_id": "K2", "name": "신규 시장 매출", "target": "$50M ARR 달성" }
      ],
      "priority": "high"
    },
    {
      "goal_id": "G2",
      "name": "규제 및 윤리 준수",
      "description": "모든 관할권에서 중대 준법 위반 제로 달성",
      "owner_id": "cco_001",
      "kpis": [
        { "kpi_id": "K3", "name": "준법 위반 건수", "target": "중대 위반 0건" },
        { "kpi_id": "K4", "name": "감사 통과율", "target": "100%" }
      ],
      "priority": "critical"
    },
    {
      "goal_id": "G3",
      "name": "운영비용 효율화",
      "description": "벤더 합리화 및 프로세스 자동화를 통해 운영비용 10% 절감",
      "owner_id": "cfo_001",
      "kpis": [
        { "kpi_id": "K5", "name": "운영비 절감률", "target": "전년 대비 10% 절감" },
        { "kpi_id": "K6", "name": "매출 대비 비용 비율", "target": "0.65 미만" }
      ],
      "priority": "high"
    }
  ],

  "risk_tolerance": {
    "financial": {
      "unbudgeted_spend_threshold": 50000000,
      "high_cost_threshold": 250000000,
      "critical_cost_threshold": 1000000000
    },
    "compliance": {
      "audit_trail_required": true,
      "anti_bribery_policy": "zero_tolerance",
      "conflict_of_interest_review": "mandatory"
    }
  },

  "governance_rules": [
    {
      "rule_id": "R1",
      "name": "자본적 지출 승인",
      "type": "financial",
      "description": "예산 기준을 초과하는 지출 의사결정은 CFO 승인 필요",
      "condition": { "field": "cost", "operator": ">", "value": 50000000 },
      "consequence": {
        "action": "require_approval",
        "approver_role": "CFO",
        "approver_id": "cfo_001",
        "severity": "high"
      },
      "active": true
    },
    {
      "rule_id": "R2",
      "name": "준법 및 윤리 검토",
      "type": "compliance",
      "description": "특수관계자 거래, 소급 정책 변경, ESG 위반 관련 의사결정은 준법감시인 검토 필요",
      "condition": {
        "operator": "OR",
        "conditions": [
          { "field": "counterparty_relation", "operator": "==", "value": "related_party" },
          { "field": "policy_change_type", "operator": "==", "value": "retroactive" },
          { "field": "involves_compliance_risk", "operator": "==", "value": true }
        ]
      },
      "consequence": {
        "action": "require_review",
        "approver_role": "준법감시인",
        "approver_id": "cco_001",
        "severity": "critical"
      },
      "active": true
    },
    {
      "rule_id": "R3",
      "name": "중대 전략 리스크 규정",
      "type": "strategic",
      "description": "중대한 전략적 영향을 수반하는 의사결정은 CEO 승인 필요",
      "condition": { "field": "strategic_impact", "operator": "==", "value": "critical" },
      "consequence": {
        "action": "require_approval",
        "approver_role": "CEO",
        "approver_id": "ceo_001",
        "severity": "critical"
      },
      "active": true
    },
    {
      "rule_id": "R4",
      "name": "전략 정합성 규정",
      "type": "strategic",
      "description": "주요 재무 의사결정 또는 전략적으로 중대한 의사결정은 최소 하나 이상의 전략 목표와 연계 필요",
      "condition": {
        "operator": "OR",
        "conditions": [
          { "field": "cost", "operator": ">", "value": 50000000 },
          { "field": "strategic_impact", "operator": "==", "value": "high" },
          { "field": "strategic_impact", "operator": "==", "value": "critical" }
        ]
      },
      "consequence": {
        "action": "require_goal_mapping",
        "severity": "medium",
        "message": "의사결정은 최소 하나의 전략 목표(G1, G2, G3)와 연계되어야 합니다"
      },
      "active": true
    },
    {
      "rule_id": "R5",
      "name": "이사회급 승인",
      "type": "financial",
      "description": "대규모 투자 기준 초과 의사결정은 CFO 및 CEO 순차 승인 필요",
      "condition": { "field": "cost", "operator": ">", "value": 1000000000 },
      "consequence": {
        "action": "require_approval",
        "approver_roles": ["CFO", "CEO"],
        "approver_ids": ["cfo_001", "ceo_001"],
        "severity": "critical",
        "requires_sequential": true
      },
      "active": true
    },
    {
      "rule_id": "R6",
      "name": "개인정보 및 보안 검토",
      "type": "privacy",
      "description": "고객 개인정보(PII) 처리·이전·노출이 수반되는 의사결정은 정보보호최고책임자(CISO) 검토 필요",
      "condition": { "field": "uses_pii", "operator": "==", "value": true },
      "consequence": {
        "action": "require_review",
        "approver_role": "정보보호최고책임자",
        "approver_id": "ciso_001",
        "severity": "high"
      },
      "active": true
    },
    {
      "rule_id": "R7",
      "name": "인력 채용 검토",
      "type": "hr",
      "description": "인력 채용 또는 조직 변경을 수반하는 의사결정은 인사팀장 검토 필요",
      "condition": { "field": "involves_hiring", "operator": "==", "value": true },
      "consequence": {
        "action": "require_review",
        "approver_role": "인사팀장",
        "approver_id": "hr_mgr_001",
        "severity": "medium"
      },
      "active": true
    },
    {
      "rule_id": "R8",
      "name": "대규모 인력 변경 승인",
      "type": "hr",
      "description": "10인 이상 인력 채용 또는 조직 구조 변경을 수반하는 의사결정은 CEO 승인 필요",
      "condition": { "field": "headcount_change", "operator": ">=", "value": 10 },
      "consequence": {
        "action": "require_approval",
        "approver_role": "CEO",
        "approver_id": "ceo_001",
        "severity": "high"
      },
      "active": true
    }
  ],

